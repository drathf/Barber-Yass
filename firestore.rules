rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”¹ Usuarios: el usuario solo puede leer y editar su propio documento
    // Rol god puede leer/escribir todo
    match /usuarios/{userId} {
      allow read, write: if
        request.auth != null &&
        (request.auth.uid == userId || get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'god');
    }

    // ðŸ”¹ Reservas: solo usuarios logueados pueden leer y escribir
    // god/admin/barberyass pueden gestionar todo
    match /reservas/{reservaId} {
      allow read, write: if request.auth != null;
    }

    // ðŸ”¹ Horarios: tiempo real solo si logueado
    match /horarios/{horarioId} {
      allow read, write: if request.auth != null;
    }

    // ðŸ”¹ Servicios: todos los logueados pueden leer, 
    // solo god/admin/barberyass pueden escribir
    match /servicios/{servicioId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol in ['god', 'admin', 'barberyass'];
    }

    // Denegar todo lo demÃ¡s
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
