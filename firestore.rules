rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // üîê Todos los usuarios deben estar autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // üë§ Colecci√≥n de usuarios
    match /usuarios/{uid} {
      allow read: if request.auth.uid == uid || esAdmin();
      allow write: if request.auth.uid == uid; // Solo puede editar su perfil
      allow update: if esAdmin(); // Admin puede editar a otros
      allow delete: if esGod(); // Solo god puede eliminar
    }

    // üìÖ Reservas
    match /reservas/{reservaId} {
      allow create: if esUsuario() || esAdmin();
      allow read: if esAdmin() || resource.data.email == request.auth.token.email;
      allow update, delete: if esAdmin();
    }

    // ‚è±Ô∏è Horarios
    match /horarios/{horarioId} {
      allow read: if true;
      allow update, delete: if esAdmin();
      allow create: if esAdmin();
    }

    // ‚úÖ FUNCIONES DE ROL
    function esUsuario() {
      return request.auth.token.rol == "user" || request.auth.token.rol == "vip";
    }

    function esVip() {
      return request.auth.token.rol == "vip";
    }

    function esAdmin() {
      return request.auth.token.rol == "admin" || request.auth.token.rol == "god";
    }

    function esGod() {
      return request.auth.token.rol == "god";
    }
  }
}
